<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.CameraActivity">

    <!-- 뒤로가기 버튼 -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 이미지 추가 공간 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/photo_description"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintBottom_toTopOf="@id/textIngredientNameLabel"/>

    <!-- 재료명 텍스트 라벨 -->
    <TextView
        android:id="@+id/textIngredientNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료명"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 재료명 입력 필드 -->
    <EditText
        android:id="@+id/editIngredientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="재료명"
        android:importantForAutofill="no"
        android:inputType="text"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textIngredientNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 등록 날짜 텍스트 라벨 -->
    <TextView
        android:id="@+id/textRegistrationDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록 날짜"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/editIngredientName"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 등록 날짜 입력 필드 -->
    <EditText
        android:id="@+id/editRegistrationDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="등록 날짜"
        android:importantForAutofill="no"
        android:inputType="date"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textRegistrationDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 소비기한 텍스트 라벨 -->
    <TextView
        android:id="@+id/textExpirationDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소비기한"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/editRegistrationDate"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 소비기한 입력 필드 -->
    <EditText
        android:id="@+id/editExpirationDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="소비기한"
        android:importantForAutofill="no"
        android:inputType="date"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textExpirationDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 보관 방법 텍스트 라벨 -->
    <TextView
        android:id="@+id/textStorageMethodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관 방법"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/editExpirationDate"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 보관 방법 선택 스피너 -->
    <Spinner
        android:id="@+id/spinnerStorageMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textStorageMethodLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 재고/수량 텍스트 라벨 -->
    <TextView
        android:id="@+id/textStockLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재고/수량"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerStorageMethod"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 재고/수량 입력 필드 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textStockLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="수량"
            android:importantForAutofill="no"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:entries="@array/unit_array"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
